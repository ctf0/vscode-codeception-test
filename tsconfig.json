{
    "compilerOptions": {
        "resolveJsonModule": true,
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
